<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyecto.apprelatos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_apprelatos"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Activity para la la presentación de la aplicación-->
        <activity android:name=".actividades.PortadaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Activity para mostrar la lista del Relatos-->
        <activity android:name=".actividades.RelatosActivity">
        </activity>

        <!-- Activity para mostrar la descripcion del Relato-->
        <activity
            android:name=".actividades.DescripcionActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Activity para mostrar el activity de Ayuda-->
        <activity
            android:name=".actividades.AyudaActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Activity para mostrar el activity de Informacion-->
        <activity
            android:name=".actividades.InformacionActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>